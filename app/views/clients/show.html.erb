<%- model_class = Client -%>
<%- address_class = Address -%>
<div class="card-header card-header-primary d-flex justify-content-lg-between align-items-center">
  <span></span>
  <h3 class='mb-0 font-weight-bold text-uppercase'>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
  </h3>
  <div class="d-flex flex-row justify-content-start align-items-center ml-auto">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                    clients_path, :class => 'btn btn-secondary ml-2' %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_client_path(@client), :class => 'btn btn-primary ml-2' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    client_path(@client),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger ml-2' %>
  </div>
</div>
<div class="card-body">
  <div class="row mt-4 mb-4">
    <div class="col-sm">
      <%= image_tag @client.image_url(:midi) %>
    </div>
  </div>
  <div class="row mt-4 mb-4">
    <div class="col-sm">
      <strong>
        <%= model_class.human_attribute_name(:name) %>:
      </strong>
      <%= @client.name %>
      <hr>

      <strong>
        <%= model_class.human_attribute_name(:cpf) %>:
      </strong>
      <%= @client.cpf %>
      <hr/>

      <strong>
        <%= model_class.human_attribute_name(:phone) %>:
      </strong>
      <% @phones.each do |phone| %>
        <%= phone.number %>
      <% end %>
      <hr/>

      <strong>
        <%= model_class.human_attribute_name(:status) %>:
      </strong>
      <%= @client.status %>
      <hr/>
    </div>
    <div class="col-sm">
      <strong>
        <%= address_class.human_attribute_name(:cep) %>:
      </strong>
      <%= @address.cep %>
      <hr/>

      <strong>
        <%= address_class.human_attribute_name(:street) %>:
      </strong>
      <%= @address.street %>, <%= @address.number %>
      <hr/>

      <strong>
        <%= address_class.human_attribute_name(:district) %>:
      </strong>
      <%= @address.district %>
      <hr/>

      <strong>
        <%= address_class.human_attribute_name(:city) %>:
      </strong>
      <%= @address.city.name %> - <%= @address.state.acronym %>
      <hr/>
    </div>
  </div>
</div>
